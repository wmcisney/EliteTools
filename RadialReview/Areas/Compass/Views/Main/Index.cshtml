
@{
    ViewBag.Title = "Compass™";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //ViewBag.FullWidth = true;
}

@section top{
    <div class="jumbotron">
        <h1>
            Compass<span style="font-size: 24px;top: -32px;position: relative;">™</span>
        </h1>
    </div>
}

<div class="people-tools">
    <div class="flex-container">
        Compass content goes here...
    </div>
</div>


<style>

    .compass-tools .flex-container {
        text-align: center;
    }

        .compass-tools .flex-container:after {
            content: '';
            display: inline-block;
            width: 100%;
        }

    .compass-tools .flex-item {
        display: inline-block;
        width: 250px;
        height: 134px;
        margin: 10px;
    }

        .compass-tools .flex-item .tool-button {
            display: table;
            width: 100%;
            height: 100%;
            cursor: pointer;
            background-color: #005ed7;
            position: relative;
        }

            .compass-tools .flex-item .tool-button:active {
                top: 1px;
            }

            .compass-tools .flex-item .tool-button .tool {
                display: table-cell;
                vertical-align: middle;
                position: absolute;
                width: 100%;
                height: 100%;
            }


                .compass-tools .flex-item .tool-button .tool .tool-icon {
                    font-size: 40px;
                    color: white;
                    margin-top: -30px;
                    display: inline-block;
                    top: 50%;
                    position: absolute;
                    left: 0;
                    right: 0;
                }

    .tool-icon.icon:before {
        top: -2px;
    }

    .compass-tools .flex-item .tool-button .tool-text-container {
        display: table-cell;
        vertical-align: middle;
    }

        .compass-tools .flex-item .tool-button .tool-text-container .tool-text {
            font-size: 16px;
            color: white;
            padding: 0px 10px;
            position: absolute;
            bottom: 0px;
            width: 100%;
            height: 54px;
            display: inline-block;
        }

    .compass-tools .fontastic-icon-checklist:before {
        font-size: 40px;
        left: 1px;
    }
</style>

